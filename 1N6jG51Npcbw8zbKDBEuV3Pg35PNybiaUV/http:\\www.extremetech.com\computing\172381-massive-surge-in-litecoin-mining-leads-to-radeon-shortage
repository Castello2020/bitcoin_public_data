            function k(){
                g.onload=g.onreadystatechange=null;
                j.removeChild(g);
                l()
            }
            g.src=i;
            g.onreadystatechange=function() { 
                if(!h && (this.readyState == "loaded" || this.readyState=="complete")){ 
                    h=true;
                    k()
                }
            };
            g.onload=k;
            j.insertBefore(g,j.firstChild)
        }
        this.onclick="return false";
