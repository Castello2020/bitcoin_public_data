<p><code><br />
	$pagesorter['tax_query'] = array(<br />
		'taxonomy' =&gt; 'post_tag',<br />
		'terms' =&gt; 'resource',<br />
		'field' =&gt; 'slug',<br />
		array(<br />
			'taxonomy' =&gt; 'category',<br />
