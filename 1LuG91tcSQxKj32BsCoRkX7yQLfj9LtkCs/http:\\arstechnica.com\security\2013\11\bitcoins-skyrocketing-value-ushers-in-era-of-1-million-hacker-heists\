<script type="text/javascript">
  ars.ARTICLE = {"url":"http:\/\/arstechnica.com\/security\/2013\/11\/bitcoins-skyrocketing-value-ushers-in-era-of-1-million-hacker-heists\/","short_url":"http:\/\/ars.to\/1gffSWG","title":"Bitcoin\u2019s skyrocketing value ushers in era of $1 million hacker heists","author":329388,"id":378201,"topic":1225993,"promoted":[25760113,25760011],"single_page":false,"comments":78,"fullwidth":false};
