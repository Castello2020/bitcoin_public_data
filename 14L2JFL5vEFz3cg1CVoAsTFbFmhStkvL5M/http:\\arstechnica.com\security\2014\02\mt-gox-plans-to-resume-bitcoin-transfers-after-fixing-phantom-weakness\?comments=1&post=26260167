<script type="text/javascript">
  ars.ARTICLE = {"url":"http:\/\/arstechnica.com\/security\/2014\/02\/mt-gox-plans-to-resume-bitcoin-transfers-after-fixing-phantom-weakness\/","short_url":"http:\/\/ars.to\/O1bLVA","title":"Mt. Gox plans to resume Bitcoin transfers after fixing \u201cphantom\u201d weakness","author":329388,"id":413747,"topic":1234981,"promoted":[],"single_page":false,"comments":30,"fullwidth":false};
