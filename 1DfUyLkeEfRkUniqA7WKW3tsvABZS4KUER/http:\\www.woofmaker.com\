    <script src="js/jquery.form.js"></script>
    <script src="js/foundation.min.js"></script>
    <script>
      function getURLParameter(name) {
        return decodeURI(
          (RegExp(name + '=' + '(.+?)(&|$)').exec(location.search)||[,null])[1]
        );
      }

      if (window.location.href.indexOf("donate") !== -1) {
        $('#paypal').submit();
      }

      $(document).foundation();
      $(document).ready(function () {
        $('#file').val('');

        var url = getURLParameter('url');
        if (url !== "null") {
          $('.crop-image-container').empty().append('<img style="margin-bottom: 20px;" class="crop-image" src="'+url+'" />');

          $('.crop-image').load(function () {
            var jcrop_api = $.Jcrop('.crop-image', {
              aspectRatio : .64,
              setSelect: [20,20, 100,20],
              touchSupport: true,
              onSelect: function (c) {
                $('#x').val(c.x);
                $('#y').val(c.y);
                $('#w').val(c.w);
                $('#h').val(c.h);
              }
            });
            var bounds = jcrop_api.getWidgetSize();
            $('#scale_w').val(bounds[0]);
            $('#scale_h').val(bounds[1]);
            $('#file').remove();
            $('#url').val(url);
            $('#form').attr('enctype', 'text/plain');
          });

          $('.upload-row').hide();
          $('.crop-row').fadeIn(1000);
        }

        var iOS = /(iPad|iPhone|iPod)/g.test( navigator.userAgent );
        var isAndroid = navigator.userAgent.toLowerCase().indexOf("android") > -1;
        var isChrome = navigator.userAgent.toLowerCase().indexOf('chrome') > -1;

        if (!isChrome) {
          $('.chrome-plugin').hide();
        }

        if (iOS || isAndroid) {
          $('.upload').hide();
          $('.fake-upload').show();

          $('#file').css({
              left: 0
          });
        }

        $('.upload').click(function () {
          $('#file').click();
        });

        $('#file').change(function () {
          var input = this;

          if (!window.FileReader) {
            alert("We currently do not support your browser.  Check back later.");
            return;
          }

          if (input.files && input.files[0]) {
            var reader = new FileReader();

            reader.onload = function (e) {
              $('.crop-image-container').empty().append('<img style="margin-bottom: 20px;" class="crop-image" />');
              
              $('.crop-image').attr('src', e.target.result);

              $('.upload-row').hide();
              $('.crop-row').fadeIn(1000);

              $('.crop-image').load(function () {
                var jcrop_api = $.Jcrop('.crop-image', {
                  aspectRatio : .64,
                  setSelect: [20,20, 100,20],
                  touchSupport: true,
                  onSelect: function (c) {
                    $('#x').val(c.x);
                    $('#y').val(c.y);
                    $('#w').val(c.w);
                    $('#h').val(c.h);
                  }
                });
                var bounds = jcrop_api.getWidgetSize();
                $('#scale_w').val(bounds[0]);
                $('#scale_h').val(bounds[1]);
              });
            }

            reader.readAsDataURL(input.files[0]);
          }
        });

        $('.create').click(function () {
          $('.crop-row').hide();
          $('.spinner-row').fadeIn(1000);
          $('#form').ajaxSubmit({
            success : function (data, textStatus, jqXHR) {
              
              var payload = JSON.parse(data);

              $('.result').empty().append('<a href="' + payload.link + '"><img border=0 src="' + payload.link + '"></a>');
              $('.link').val(payload.link);

              $('.link').focus(function() {
                $(this).select();
              }).mouseup(function(e) {
                e.preventDefault();
              });

              $('.spinner-row').hide();
              $('.finish-row').fadeIn(1000);
            },
            error : function (jqXHR, textStatus, errorThrown) {
              $('.spinner-row').hide();
              $('.error-row').fadeIn(1000);
            }
          });
        });

        $('.cancel').click(function () {
          $('#file').val('');
          $('.section').hide();
          $('.upload-row').fadeIn(1000);
        });

        OneID.init({
           merchant_id: "00010001-b640-442d-a29e-f510bd63a2c0"
        });
        $('.donate').click(function () {
          var $donate = $(this);
          OneID.donate(function(result) {
            $donate.attr('src','https://account.oneid.com/api/images/quickdonate-blue.png')
          });
          $donate.attr('src','https://account.oneid.com/api/images/quickdonate-gray.png')
        });
      });
    </script>
    <script>
      (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
      (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
      m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
      })(window,document,'script','//www.google-analytics.com/analytics.js','ga');

      ga('create', 'UA-8847196-5', 'woofmaker.com');
      ga('send', 'pageview');

    </script>
