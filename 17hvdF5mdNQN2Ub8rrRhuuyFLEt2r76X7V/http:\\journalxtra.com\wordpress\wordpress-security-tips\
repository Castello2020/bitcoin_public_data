(function($){
    $(window).load(function() {
            $('a').filter(function() {
                return this.href.match(/.*\.(zip|mp3|mpeg|pdf|doc*|ppt*|xls*|jpeg|png|gif|tiff)/);
            }).click(function(e) {
                ga('send','event', 'download', 'click', this.href);
