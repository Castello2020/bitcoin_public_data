    <script>

       $('.carousel').carousel({interval: 5000});
       $('a').tooltip({html: true});

       function load_flags()
       {
          $('img.flags').each(function(){this.src=$(this).attr('data-original');});
       }

       $(document).ready(function() {
          try {
          if (location.hash!='' && location.hash!='#')
               $('html, body').animate({ scrollTop: $(location.hash).offset().top-60 }, 500);
          } catch(e) {}

          try {
          if (location.hash!='' && location.hash!='#')
               $('#tabsnav a[href="'+location.hash+'"]').tab('show');
          } catch(e) {}
       });

    </script>

