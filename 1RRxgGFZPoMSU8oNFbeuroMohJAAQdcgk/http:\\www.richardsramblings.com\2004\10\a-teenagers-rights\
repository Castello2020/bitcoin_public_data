<!-- google_ad_section_end -->			</section>
			<a class='comment-reply-link' href='/2004/10/a-teenagers-rights/?replytocom=827#respond' onclick='return addComment.moveForm("comment-827", "827", "respond", "1331")'>Reply</a>		</article>
