					sessionStorage.javscr_mod_lib_id_lingua_orig = 0;
				}
			);
		} else {
			$(tag_tab_lib_id_lingua_orig[1]).html(risultato_mod_rece20);
		}
		
		$(tag_tab_lib_id_lingua_orig[3]).hide(1);
		$(tag_tab_lib_id_lingua_orig[4]).show(1);
		$(tag_tab_lib_id_lingua_orig[0]).hide(1);
		$(tag_tab_lib_id_lingua_orig[1]).fadeIn(1000);
