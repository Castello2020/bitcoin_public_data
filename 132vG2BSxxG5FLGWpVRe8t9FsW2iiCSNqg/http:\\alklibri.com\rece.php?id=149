var arraydomande = {"1":"Quante dita ha una mano? (Rispondere per esteso, in lettere, non numeri)", "2":"Quante braccia ha un uomo? (Rispondere per esteso, in lettere, non numeri)", "3":"Quante braccia ha una donna? (Rispondere per esteso, in lettere, non numeri)", "4":"Di che nazionalità era Dante?", "5":"Scrivi uno dopo l\'altro le seguenti lettere: o, v, v, i, o.", "6":"Scrivi uno dopo l\'altro le seguenti lettere, al contrario: m, o, p.", "7":"Scrivi uno dopo l\'altro le seguenti lettere, partendo dall\'ultima: n, a, t.", "8":"Scrivi quante \"a\" contiene la parola \"tavola\", in lettere.", "9":"Quanto fa due più due? (Scrivi il numero in lettere)", "10":"Scrivi 100 in lettere.", "11":"Scrivi 1000 in lettere.", "12":"Qual è la protagonista omonima di \"Madame Bovary\"?", "13":"Quante facce ha un cubo?", "14":"Quanti lati ha un triangolo?", "15":"Quanti angoli ha un triangolo?", "16":"Scrivi \"arzigogolato\".", "17":"Scrivi \"dentro\".", "18":"Scrivi \"deretano\".", "19":"Scrivi \"immantinente\".", "20":"Scrivi \"solipsismo\"."};
//messaggi di aggiornamento campo
var risultato_mod_rece2 = "<p><span style=\"color:lime\"><b>Recensione aggiornata.</b></span></p>";
var risultato_mod_rece3 = "<p><span style=\"color:lime\"><b>Recensione aggiornata, sar&agrave; pubblicata dopo moderazione.</b></span></p>";
var risultato_mod_rece4 = "<p><span style=\"color:lime\"><b>Recensione aggiornata, sar&agrave; pubblicata dopo moderazione.</b></span></p>";
var risultato_mod_rece10 = "<p><span style=\"color:CRIMSON\"><b>Campo vuoto! Recensione non salvata.</b></span></p>";
var risultato_mod_rece11 = "<p><span style=\"color:CRIMSON\"><b>Errore nell'aggiornamento.</b></span></p>";
var risultato_mod_rece12 = "<p><span style=\"color:CRIMSON\"><b>Risposta errata alla domanda di convalida</b></span></p>";
var risultato_mod_rece20 = "<p><span style=\"color:lime\"><b>Nessuna modifica effettuata.</b></span></p>";

//funzione che assegna il testo con risultato dell'aggiornamento
function assegna_testo (funz_codice_mod, funz_tag_aggiorna) {
	switch (funz_codice_mod) {
		case 2:
			$(funz_tag_aggiorna).html(risultato_mod_rece2);
			break;
		case 3:
			$(funz_tag_aggiorna).html(risultato_mod_rece3);
			break;
		case 4:
			$(funz_tag_aggiorna).html(risultato_mod_rece4);
			break;
		case 10:
			$(funz_tag_aggiorna).html(risultato_mod_rece10);
			break;
		case 11:
			$(funz_tag_aggiorna).html(risultato_mod_rece11);
			break;
		case 12:
			$(funz_tag_aggiorna).html(risultato_mod_rece12);
			break;
	}
}

//inizializzazione array dei tags per i moduli di modifica
var tag_rece = new Array ("#salva_rece", "#receagg", "#cmp_rece", "#modi_rece", "#rece", "javscr_mod_rece", "lib_rece", "#box_autore", "#testo_recensione");
var tag_cons = new Array ("#salva_lib_consigliato_a", "#lib_consigliato_a_agg", "#cmp_lib_consigliato_a", "#modi_lib_consigliato_a", "#lib_consigliato_a", "javscr_lib_consigliato_a", "lib_consigliato_a", "#pagella", "#testo_lib_consigliato_a");
var tag_tab_titolo = new Array ("#salva_titolo", "#titoloagg", "#cmp_titolo", "#modi_titolo", "#titolo", "javscr_t", "lib_titolo", "", "#testo_titolo");
//////////////////////////////////////////////oppure Array ("#salva_titolo", etc...
var tag_tab_tit_orig = new Array ("#salva_titolo_orig", "#titolo_orig_agg", "#cmp_titolo_orig", "#modi_titolo_orig", "#titolo_orig", "javscr_tit_orig", "lib_titolo_originale", "", "#testo_titolo_orig");
var tag_tab_tit_alt = new Array ("#salva_tit_alt", "#tit_alt_agg", "#cmp_titoli_alt", "#modi_titoli_alt", "#titoli_alt", "javscr_tit_alt", "lib_titoli_alternativi", "", "#testo_titolo_alt");
var tag_tab_tit_orig_alt = new Array ("#salva_tit_orig_alt", "#tit_orig_alt_agg", "#cmp_titoli_orig_alt", "#modi_titoli_orig_alt", "#titoli_orig_alt", "javscr_tit_orig_alt", "lib_tit_originali_alt", "", "#testo_tit_orig_alt");
var tag_tab_collana = new Array ("#salva_collana", "#collana_agg", "#cmp_collana", "#modi_collana", "#collana", "javscr_collana", "lib_collana", "", "#testo_collana");
var tag_tab_anno = new Array ("#salva_anno", "#anno_agg", "#cmp_anno", "#modi_anno", "#anno", "javscr_anno", "lib_anno", "", "#testo_anno");
var tag_tab_lib_anno_it = new Array ("#salva_lib_anno_it", "#lib_anno_it_agg", "#cmp_lib_anno_it", "#modi_lib_anno_it", "#lib_anno_it", "javscr_lib_anno_it", "lib_anno_it", "", "#testo_lib_anno_it");
var tag_tab_pagine = new Array ("#salva_pagine", "#pagine_agg", "#cmp_pagine", "#modi_pagine", "#pagine", "javscr_pagine", "lib_pagine", "", "#testo_pagine");
var tag_tab_lib_drm = new Array ("#salva_lib_drm", "#lib_drm_agg", "#cmp_lib_drm", "#modi_lib_drm", "#lib_drm", "javscr_lib_drm", "lib_drm", "", "#testo_lib_drm");
var tag_tab_lib_id_lingua = new Array ("#salva_lib_id_lingua", "#lib_id_lingua_agg", "#cmp_lib_id_lingua", "#modi_lib_id_lingua", "#lib_id_lingua", "javscr_lib_id_lingua", "lib_id_lingua", "", "#testo_lib_id_lingua");
var tag_tab_lib_id_lingua_orig = new Array ("#salva_lib_id_lingua_orig", "#lib_id_lingua_orig_agg", "#cmp_lib_id_lingua_orig", "#modi_lib_id_lingua_orig", "#lib_id_lingua_orig", "javscr_lib_id_lingua_orig", "lib_id_lingua_orig", "", "#testo_lib_id_lingua_orig");
var tag_tab_arg = new Array ("#salva_arg", "#arg_agg", "#cmp_argomento", "#modi_argomento", "#argomento", "javscr_arg", "lib_argomento", "", "#testo_argomento");
var tag_tab_tradut = new Array ("#salva_tradut", "#tradut_agg", "#cmp_traduttore", "#modi_traduttore", "#traduttore", "javscr_tradut", "lib_traduttore", "", "#testo_traduttore");
var tag_tab_curat = new Array ("#salva_curat", "#curat_agg", "#cmp_curatore", "#modi_curatore", "#curatore", "javscr_curat", "lib_curatore", "", "#testo_curatore");
var tag_tab_prezzo = new Array ("#salva_prezzo", "#prezzo_agg", "#cmp_prezzo", "#modi_prezzo", "#prezzo", "javscr_prezzo", "lib_prezzo", "", "#testo_prezzo");
