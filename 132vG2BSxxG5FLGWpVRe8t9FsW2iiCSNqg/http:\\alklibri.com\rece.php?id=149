var tag_trama = new Array ("#salva_lib_trama", "#lib_trama_agg", "#cmp_lib_trama", "#modi_lib_trama", "#lib_trama", "javscr_lib_trama", "lib_trama", "#pagella", "#testo_lib_trama");
var tag_inc_incipit = new Array ("#salva_inc_incipit", "#inc_incipit_agg", "#cmp_inc_incipit", "#modi_inc_incipit", "#inc_incipit", "javscr_inc_incipit", "inc_incipit", "", "#testo_inc_incipit");
var tag_expl_explicit = new Array ("#salva_expl_explicit", "#expl_explicit_agg", "#cmp_expl_explicit", "#modi_expl_explicit", "#expl_explicit", "javscr_expl_explicit", "expl_explicit", "", "#testo_expl_explicit");

var tags_tutti = new Array (tag_cons, tag_tab_tit_alt, tag_tab_tit_orig_alt,
							tag_tab_collana, tag_tab_anno, tag_tab_pagine, tag_tab_arg, tag_tab_tradut, tag_tab_curat, tag_tab_prezzo,
							tag_tab_isbn);

//
//Blocco convalida textarea recensione
//
$(document).ready(function(){
	$(tag_rece[0]).click(function() {
		if (sessionStorage.javscr_mod_rece == 2) {
			sessionStorage.javscr_mod_rece = 0;

			//domanda di convalida
			id_domanda_scelta = Math.floor(Math.random() * 20 + 1);
			testo_domanda = arraydomande[id_domanda_scelta];
			//testo_domanda = escapeHtmlEntities(testo_domanda);
			var risposta = prompt(testo_domanda);

			$(tag_rece[8]).load("ins_ajax/ajax_agg_rece_rece.php", {recenew: $(tag_rece[2]).val(), id_rece: "149", campo_modifica: tag_rece[6], id_conv: id_domanda_scelta, risp: risposta}, function()
				{
					var codice_mod_campo = parseInt(sessionStorage.javscr_mod_lib_rece);
					assegna_testo(codice_mod_campo, tag_rece[1]);
					sessionStorage.javscr_mod_lib_rece = 0;
				}
			);
		} else {
			$(tag_rece[1]).html(risultato_mod_rece20);				
		}
		
		$(tag_rece[3]).hide(1);
		$(tag_rece[4]).show(1);
		$(tag_rece[0]).hide(1);
		$(tag_rece[7]).fadeIn(3000);
		$(tag_rece[1]).fadeIn(1000);
		$(tag_rece[1]).fadeOut(4000);
	});
});

