	jQuery.noConflict();

    jQuery(document).ready(function(){
      	jQuery("dd").hide();
	jQuery("dt").click(function(event){
             var desplegable = jQuery(this).next();
             jQuery('dd').not(desplegable).slideUp('fast');
              desplegable.slideToggle('fast');
              event.preventDefault();
              })
        });
</script>
