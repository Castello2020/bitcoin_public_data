		  if ( false &#33;== strpos( &#036;_SERVER&#91;&#036;key&#93;, &#39;.php&#39; ) ) {
			preg_match( &#39;@&#91;a-z0-9_&#93;+&#092;.php@i&#39;, &#036;_SERVER&#91;&#036;key&#93;, &#036;matches );
			if ( is_array( &#036;matches ) &amp;&amp; ( array_key_exists( 0, &#036;matches ) )
									  &amp;&amp; ( substr( &#036;matches&#91;0&#93;, -4, 4 ) == &#39;.php&#39; )
									  &amp;&amp; ( is_readable( &#036;matches&#91;0&#93; ) ) ) {
			  return &#036;matches&#91;0&#93;;
			}
		  }
		}
	  }
