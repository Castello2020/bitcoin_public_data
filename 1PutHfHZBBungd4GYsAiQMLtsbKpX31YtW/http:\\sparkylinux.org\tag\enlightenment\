                // bind close action to adblock bar
                $("#close-adblock-bar").click(function(){
                  $("#a274b9").fadeOut();
                });
              }
              else{
                $("#ad0569e").fadeIn();
              }
              // bind close action to adblock message
              $("#close-adblock-message").click(function(){
                $("#ad0569e").fadeOut();
              });
            }
          }

        });
