    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
    <script src="js/bootstrap.min.js"></script>
	<script src="js/jquery.validate.min.js"></script>
	<script>
		var taxa = 0.05;
		var taxafixa = 0.25;
		var bitrate = 95.89175;

		$(document).ready(function(){
		
			$("#mostrar_carregamento").click(function(){
				$("#esconder").toggle();
				$("#esconder2").toggle();
				$(document.body).animate({
				    'scrollTop':   $('#esconder').offset().top
				}, 2000);
			});
			
			//$("#carregar").click(function(){$("#carregar").remove();$("#form_carregar").slideToggle();});
			$("#montante").load("api/rede_montante.php?rede=vitamina",function(){valor2btc()});
			
			$('select[name="rede_tipo"]').change(function(){
				var rede = $(this).val();
				$("#montante").load("api/rede_montante.php?rede=" + rede);
			});
			
			$('input[name="rede"]').change(function(){
				var rede = $(this).val();
				switch(rede){
					default:
						$("#rede_tipo").hide();
						$("#rede_tipo").prop("disabled",true);
						$("#montante").load("api/rede_montante.php?rede=" + rede,valor2btc);
						break;
					case "vodafone":
					case "tmn":
					case "optimus":
					case "lyca":
						$("#rede_tipo").show();
						$("#rede_tipo").prop("disabled",false);
						$("#rede_tipo").load("api/rede_tipo.php?rede=" + rede, function(){$("#montante").load("api/rede_montante.php?rede=" + $("#rede_tipo").val(),valor2btc)});
						valor2btc();
						break;
				}
			});

			$('#montante').change(function() {
				valor2btc();
			});

			$('#carregamento_tel').validate(
			 {
			  rules: {
				numero: {
				  minlength: 9,
				  maxlength: 9,
				  required: true,
				  digits: true
				}

			  },
			  highlight: function(element) {
				$(element).closest('.control-group').removeClass('success').addClass('error');
			  },
			  success: function(element) {
				//$(element).css("background-color" ,"rgba(175, 255, 144, 0.38)");
				//element.text('OK!').addClass('valid').closest('.control-group').removeClass('error').addClass('success');
			  }
			 });
			 

		});
		
		function valor2btc(){
			var valor = $('#montante').val();
			var totaleur = Math.ceil(((1+taxa)*valor+taxafixa)*100) / 100;
			var totalbit = totaleur/bitrate;
			$('#totaleur').text(totaleur+"€ ("+format(totalbit,10)+" Ƀitcoins)");

		}
		
		function format(b,c) {
			var a = b+'';
			return a.substr(0,c)
		}	
	</script>

