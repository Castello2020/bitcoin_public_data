	pluckAppProxy.loadPlugin("pluck/pluck.js", function(){
		// CUSTOMERS: ENABLE NEW SHARING SERVICES HERE.
		// 1) Add the link in the desired position above.  ensure that it has a unique classname like pluck-share-link-myServiceName
		// 
		// 2) Add the URL format to the URL mapping like so:
		// pluckAppProxy.pluck_util_share_url_map['hrefService'] = {href: "http://www.myHrefService.com?url=?URL?&title=?TITLE?"};
		// pluckAppProxy.pluck_util_share_url_map['alertService'] = {onClick: function(url, title, event){ 
		// 		alert("url: " + url + " title: " + title);
		// 		event.preventDefault();
		// 	}
		// };
		//    For href property, ?URL? is replaced with the url, ?TITLE? is replaced with the title.  Both are case sensitive.
		//    make sure the key (i.e. hrefService) exactly matches the class of the link.
		//
		// 3) Optionally add a pluck-share-link-needs-short class if you want to disable the link until a short url has been fetched.
		//    We fill in all the links with a long form URL while we asynchronously call a URL shortening service.
		//    When the shortening service responds, all links get replaced with the new shortened URL, and pluck-share-link-needs-short are enabled.
		//    For backwards compatibility, twitter and facebook are always treated as pluck-share-link-needs-short.
	
		(function($, jQuery) {
			if (typeof(pluckAppProxy.pluck_util_share_dialog_display) === 'undefined') {
				pluckAppProxy.pluck_util_share_dialog_display = function(dialog, obj) {
					var offsets = "";
					if (obj.attr("dialogdisplay") == "baseline") {
						offsets = { top: 9, left: (obj.width() + 10) * -1 };
					} else {
						offsets = { top: dialog.outerHeight(), left: Math.round((dialog.width() - obj.width()) / 2) };
					}
					if ($.pluckDisplayCorners() && !dialog.hasClass("pluckShown")) {
						dialog.addClass("pluckShown");
						var allCorners = {tl: { radius: 4 }, tr: { radius: 4 }, bl: { radius: 4 }, br: { radius: 4 }, antiAlias: true, autoPad: false, validTags: ["div"] };
						$("#" + dialog.attr("id") + " > div.pluck-dialog-wrapper").pluckCorner(allCorners);
					}
					pluckAppProxy.displayDialog(dialog, obj, offsets, function() {
						setTimeout(function() { $(".pluck-dialog-middle .pluck-share-col1 a:visible:first", dialog).focus(); }, 200);
						if (obj.attr("includeclipboard") != "true") return;
						var loadClip = function() {
							var clip = new ZeroClipboard.Client();
							pluckAppProxy.pluck_clipboard_register(dialog.attr("id"), clip);
							clip.setHandCursor(true);
							clip.glue($('.pluck-share-link-clipboard', dialog).parent().get(0));
							clip.addEventListener('onComplete', function() { pluckAppProxy.fadeOut(dialog); clip.hide(); dialog.attr("permalink", "");});
							clip.setText(dialog.attr("shorturl") ? dialog.attr("shorturl") : dialog.attr("permalink"));
							clip.show();
						};
						if (!pluckAppProxy.pluck_find_clipboard(dialog.attr("id"))) {
							if (typeof(ZeroClipboard) == 'undefined') {
								pluckAppProxy.loadLibrary(pluckAppProxy.genericBaseUrl + "Content/ua/scripts/ZeroClipboard.js", function(){
									ZeroClipboard.setMoviePath(pluckAppProxy.genericBaseUrl + "/Content/ua/swf/ZeroClipboard.swf");
									loadClip();
								});
							} else {
								loadClip();
							}
						} else {
							var clip = pluckAppProxy.pluck_find_clipboard(dialog.attr("id"));
							if (clip) {
								clip.show();
								clip.setText(dialog.attr("shorturl") ? dialog.attr("shorturl") : dialog.attr("permalink"));
							}
						}
					});
				};
			}
		})(dmJQuery, dmJQuery);
		pluckAppProxy.pluck_util_share_dialog('#pluck_util_share_dialog_772506', '#pluck_comments_772493', { });
	}, '');
