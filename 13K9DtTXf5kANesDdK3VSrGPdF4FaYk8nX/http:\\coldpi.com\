<!-- JavaScript -->
<script src="js/jquery-1.10.2.js"></script>
<script src="js/bootstrap.js"></script>
<script type="text/javascript">

    var windowhash = window.location.hash;
    if (windowhash == '#thankyou') {
        $('#confirmation').modal();
    }
    if (windowhash == '#details') {
        $('#paymentDialog').modal();
    }
    
    $(window).bind( 'hashchange', function(e) {
        var windowhash = window.location.hash;
        if (windowhash == '#thankyou') {
            $('#confirmation').modal();
        }
        if (windowhash == '#details') {
            $('#paymentDialog').modal();
        }
    });
    
    
    function fieldError(el) {
        $('#' + el).parent().addClass('has-error');
    }
    $('#checkout').on('click', function() {
        $('#details div').removeClass('has-error');
        var name = $('#name').val();
        var email = $('#email').val();
        var address = $('#address').val();
	var city = $('#city').val();
        var country = $('#country').val();
        var zip = $('#zip').val();
        var err = 0;
        
        if (name == '' || name == null) { 
            fieldError('name');
            err++;
        }
        if (email == '' || email == null || email.indexOf('@') == -1 || email.indexOf('.') == -1) {
            fieldError('email');
            err++;
        }
        if (address == '' || address == null) {
            fieldError('address');
            err++;
        }
	if (city == '' || city == null) {
            fieldError('city');
            err++;
        }

        if (country == '' || country == null) {
            fieldError('country');
            err++;
        }
        if (zip == '' || zip == null) {
            fieldError('zip');
            err++;
        }
        if (err === 0) {
            var finalPrice = $('#price').val()*$('#amount').val();
            $('#price').val(finalPrice);
            var itemdesc = $('#amount').val() + 'x' + $('#itemdesc').val();
            $('#itemdesc').val(itemdesc);
            var form = $('#details').serialize();
            
            event.preventDefault();
            $('#checkout').attr('disabled','disabled');
            $.post('process.php', form, function(data) {
                if (data)
                    $('#bitpay').submit();
            });
        }
      
    });
    $('#pay').on('click',function() {
        //$('#bitpay').submit();
        $('#what').html('<strong>Cold Pi Kit</strong>');
        $('#itemdesc').val('Cold Pi Kit');
        $('#price').val('0.6');
        $('#paymentDialog').modal();
    });

    $('#paySDHC').on('click',function() {
        //$('#bitpay').submit();
        $('#what').html('<strong>SDHC with Raspbian & Armory</strong>');
        $('#itemdesc').val('Standalone SDHC Cards');
        $('#price').val('0.2');
        $('#paymentDialog').modal();
    })
</script>
