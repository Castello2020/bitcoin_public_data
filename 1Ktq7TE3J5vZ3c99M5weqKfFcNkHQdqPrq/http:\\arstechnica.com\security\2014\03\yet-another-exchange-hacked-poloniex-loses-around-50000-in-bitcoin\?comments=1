<script type="text/javascript">
  ars.ARTICLE = {"url":"http:\/\/arstechnica.com\/security\/2014\/03\/yet-another-exchange-hacked-poloniex-loses-around-50000-in-bitcoin\/","short_url":"http:\/\/ars.to\/1e69bDE","title":"Yet another exchange hacked: Poloniex loses around $50,000 in bitcoin","author":335607,"id":422289,"topic":1236935,"promoted":[26379395,26379579,26379615],"single_page":false,"comments":313,"fullwidth":false};
