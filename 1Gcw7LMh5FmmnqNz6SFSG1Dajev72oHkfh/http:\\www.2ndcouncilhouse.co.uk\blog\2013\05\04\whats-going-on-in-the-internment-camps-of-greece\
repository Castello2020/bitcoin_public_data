        }
      }
    }
    if (user_buckets[b] in wpbtb_show_list) {
      var current_bucket = user_buckets[b];
      var widgets_to_show = wpbtb_show_list[current_bucket];
      try {
        console.log('widgets_to_show: ', widgets_to_show);
      } catch(e) {}
