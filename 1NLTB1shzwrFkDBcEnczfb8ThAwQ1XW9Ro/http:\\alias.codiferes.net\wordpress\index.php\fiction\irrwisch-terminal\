jQuery(document).ready(function()
{
	jQuery("#email").blur(function() 	{		
				jQuery.post("http://alias.codiferes.net/wordpress/wp-content/plugins/gravatar-signup-encouragement/gravatar-check.php?r=X",{ gravmail:jQuery(this).val(), action:"gse_check" } ,function(data)
        {
		  if (data == 'no') 		  {
			var emailValue = jQuery("#email").val(); 
			emailValue = encodeURIComponent(emailValue); 
			jQuery('#gse_comments_message').hide(); 
		  	jQuery("#submit").after("<br /><div id='gse_comments_message'>Au lieu d'un zigouigoui aléatoire tout moche, faites-vous donc un zouli <a href='http://en.gravatar.com/site/signup/" + emailValue + "' target='_blank'>Gravatar</a> (avec un 'gra' comme dans 'gratos').</div>");           }  	
		  else
		  {
			jQuery('#gse_comments_message').hide(); 		  }
        });
 
	});
});
