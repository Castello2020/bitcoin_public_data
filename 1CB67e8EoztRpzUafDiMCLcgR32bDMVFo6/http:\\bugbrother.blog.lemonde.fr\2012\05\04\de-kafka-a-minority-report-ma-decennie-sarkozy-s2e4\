   tdb_user_id = (document.cookie.match("(^|; )tdb_user_id=([^;]*)") || 0)[2];
   void 0 === tdb_user_id || "" === tdb_user_id ? atCallback() : require(["lmd/core/auth"], function(b) {
     b.loadUser().done(function() {
       if (null !== b.user) { xt_an = 0 < b.user.id ? b.user.id : "", "inscrit" === b.user.type ? xt_ac = "INSCRIT" : ("abonne" === b.user.type && null !== b.user.classe_abonnement && (xt_ac = b.user.classe_abonnement)); }
       atCallback();
     });
   });
 };
}());
</script>

