         var matches = document.location.hostname.match(/.*?([^\.]+\.[^\.]+)$/i);
         if (matches && matches[1]) {
            document.domain = matches[1];
         }

         function resizeJelec() {
            // on test 10 fois en 1s la taille de l'iframe car elle peut changer au chargement
            var idx = 0, jelec_timer = setInterval(function () {
               if (idx >= 10) {
                  window.clearInterval(jelec_timer);
                  return;
               }
               var the_height = document.getElementById('iframe_jelec').contentWindow.document.body.clientHeight;
               document.getElementById('iframe_jelec').height = the_height;
               idx++;
            }, 100);
         }
      </script>
      <li id="lemonde-journal-elec" class="widget-container LeMondeJournalElec_widget"><iframe id="iframe_jelec" onLoad="resizeJelec();" src="http://www.lemonde.fr/iframe/jelec.html" scrolling="no" height="0" seamless="seamless"></iframe></li><li data-debugname="bizdev"><div class="lmd-flottant widget-container"></div><script type="text/javascript">LMD_EXPORT.flottant.parse();</script></li><li id="lemonde-pub-pave_bas" class="widget-container LeMondePublicite_widget"><div class="lmd-advert"><script type="text/javascript">LMD_EXPORT.Advert("pave_bas");</script></div></li><li data-debugname="bizdev"><div class="lmd-flottant widget-container" data-name="shopping"></div><script type="text/javascript">LMD_EXPORT.flottant.parse();</script></li><li id="text-2" class="widget-container widget_text">			<div class="textwidget"><!--
