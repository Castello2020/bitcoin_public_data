function clicktab(x) {
	document.getElementById('tabcontent1').style.display = "none"; 
	document.getElementById('tabcontent2').style.display = "none";
	document.getElementById('tabcontent3').style.display = "none";
	document.getElementById('tabcontent4').style.display = "none";
	document.getElementById('tabcontent5').style.display = "none";
	document.getElementById('tabcontent'+x).style.display = "block";
	document.getElementById('tab1').style.backgroundColor = "#ccc";
	document.getElementById('tab2').style.backgroundColor = "#ccc";
	document.getElementById('tab3').style.backgroundColor = "#ccc";
	document.getElementById('tab4').style.backgroundColor = "#ccc";
	document.getElementById('tab5').style.backgroundColor = "#ccc";
	document.getElementById('tab'+x).style.backgroundColor = "#eee";
	document.getElementById('tab1').style.borderBottom = "#999 1px solid";	
	document.getElementById('tab2').style.borderBottom = "#999 1px solid";
	document.getElementById('tab3').style.borderBottom = "#999 1px solid";
	document.getElementById('tab4').style.borderBottom = "#999 1px solid";
	document.getElementById('tab5').style.borderBottom = "#999 1px solid";
	document.getElementById('tab'+x).style.borderBottom = "#eee 1px solid";
}

</script>
