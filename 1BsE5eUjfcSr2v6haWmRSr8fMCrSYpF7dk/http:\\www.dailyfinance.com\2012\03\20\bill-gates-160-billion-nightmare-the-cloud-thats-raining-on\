<script type="text/javascript">function jobsearchsubmit(form){var f=document.getElementById("jobsearchdf");var keywords=document.forms["jobsearchdf"]["keywords"].value;var location=document.forms["jobsearchdf"]["location"].value;f.action="http://jobs.aol.com/listings/"+keywords+"/";f.submit();}
function alpha(e){var k;document.all?k=e.keyCode:k=e.which;return((k>64&&k<91)||(k>96&&k<123)||(k>188&&k<190)||k==8||k==32||(k>=48&&k<=57));}
function num(e){var k;document.all?k=e.keyCode:k=e.which;return(k==8||k==32||(k>=48&&k<=57));}</script>	<div class="rail_module savings-calculator-rail hidden-phone" data-responsive='{"destination":"right_rail","index":6}'>
