                    <!-- display the comment metadata like time and date-->
                        <div class="comment-meta commentmetadata">
                            <a href="http://www.openhomeautomation.net/wireless-home-automation/#comment-45339">
                                <time  itemprop="commentTime" itemscope="itemscope" datetime="2014-01-07T19:43:46+00:00" >
