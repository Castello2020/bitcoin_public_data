<script>
(function(){

var block=$("#block-views-HelpfulTags-block_1 .ftags"),
	blk=block[0],
	pgr=block.find(".view-footer .pgr")

block.find(".view-content .blogpost").each(function(){
	var me=$(this),
		url=me.attr("pic").match(/src="(\S+)"/i)[1]
	me.removeAttr("pic")
	me.find(".portrait").css({"background-image":"url(http://images.weserv.nl/?url="+url.replace("http://www.",'')+"&w=32&h=32&t=square)"})
})

//pager initial state per tag, all start on page 0
blk.tags={}
block.find(".view-header:first .tagtab:first li")
	.click(function(){
		var me=$(this),
			content=block.find(".view-content .item-list>ul"),
			tag=me.attr("id")
		if(tag!=blk.getActiveTab()){
			me.parent().find(".active").removeClass("active")
			me.addClass("active")
			blk.update(0,
				function(){
					content.parent().css({height:content.height(),width:content.width()})
					content.fadeOut(250)
					$("<div class=waity />").insertBefore(content)
				},
				function(){
					block.find(".waity").remove()
					content.parent().css({height:"auto",width:"auto"})
					content.fadeIn(250)
					//console.log("pg?",blk.tags[tag])
					//if on pg 0, disable back
					if(!blk.tags[tag]) pgr.find(".prev").addClass("disabled")
					else  pgr.find(".prev").removeClass("disabled")
				}
			)
		}
	})
	.each(function(){blk.tags[this.id]=0})

pgr.find(".aro").click(function(){
	var me=$(this),
		pgr=me.parent(),
		pg=me.hasClass("next")?1:-1
	if(!me.hasClass("disabled"))
		blk.update(pg,
			function(){
				$("<div class=waity />").css({display:"inline-block"}).insertAfter(me.hide())
				pgr.find(".aro").addClass("disabled")
			},
			function(){
				pgr.find(".waity").remove()
				var pg=blk.tags[blk.getActiveTab()]
				//if not page 0, use front and back
				pgr.find(".aro.next"+(pg?",.aro.prev":"")).removeClass("disabled")
				//console.log("pg",pg)
				me.show()
			}
		)
})

//update state
blk.update=function(arrowClicked,callbefore,callback){
	var block=$(this),
		blk=this,
		me=block.find(".view-footer:first .aro"+(arrowClicked?"."+(arrowClicked==1?"next":"prev"):"")),
		pgr=me.parent(),
		tag=blk.getActiveTab(),
		pg=blk.tags[tag]+arrowClicked,
		url="/json/json/"+tag+"?page="+pg
		
	$.ajax({
		url:url,
		dataType:"json",
		//context:{list:list,blk:blk,tag:tag,pg:pg,url:url},
		beforeSend:callbefore,
		success:function(n){
			//update page tab is on
			blk.tags[tag]=pg
			//update list content
			n=n.nodes
			n.sort(function(a,b){return b.node.nid-a.node.nid})
			block.find(".view-content:first ul").find("li").each(function(i){
				var li=$(this)
				if(n[i]){
					var ni=n[i].node
					if(!ni.picture) ni.picture="http://www.thedailypaul.com/images/new-favicon-164.gif" //"files/pictures/default.gif"
					else ni.picture="http://www.dailypaul.com/"+ni.picture
					li.find(".portrait").css({"background-image":"url(http://images.weserv.nl/?url="+ni.picture.replace("http://www.",'')+"&w=32&h=32&t=square)"})
						.add(li.find(".author").html(ni.name))
						.attr({href:"/user/"+ni.uid})
					li.find(".headline").attr({href:"/"+ni.nid+"&from=lbp"}).html(ni.title)
					li.css({display:"list-item"})
				}
				else li.css({display:"none"})
			})
			//console.log(pg,url,blk.tags)
		},
		complete:callback
	})
}
blk.getActiveTab=function(){
	return $(this).find(".view-header:first .tagtab .active").attr("id")
}

})()
</script>    </div>
  
  
